.headline {
  order: 0;
  flex-shrink: 0;
  flex-basis: 75px;

  display: flex;
  flex-direction: row;
  justify-content: center;

  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  background-color: #ffffff;
  transition: height .2s ease-in-out;

  &__content {
    position: fixed;
    top: 0;

    height: 77px;
    width: 100%;
    max-width: 1010px;
    padding: 26px 20px;

    box-sizing: border-box;

    display: flex;
  }
}
