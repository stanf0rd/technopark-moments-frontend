.headline {
  position: fixed;
  top: 0;
  width: 100%;
  height: 77px;
  padding: 26px 20px;

  box-sizing: border-box;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  background-color: #ffffff;
  transition: height .2s ease-in-out;

  &__thin {
    height: 52px;
  }
}
