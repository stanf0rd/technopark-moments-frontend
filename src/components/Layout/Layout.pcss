body {
  margin: 0;
  color: #262626;
  font-size: 14px;
  font-family: BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

a {
  color: black;
  text-decoration: none;
}

button {
  font-size: 100%;
  font-family: inherit;
  outline: none;
  cursor: pointer;
  border: 0;
}

.layout {
  min-height: 100vh;
  overflow: hidden;

  display: flex;
  flex-direction: column;
}
